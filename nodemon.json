{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "watch": [
    "src/"
  ],
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_FILES": "true",
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "ext": "js,json,ts"
}