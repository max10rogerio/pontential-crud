{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2016",
      "es2017",
      "dom"
    ],
    "target": "ES2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./build",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": [
      "src/typings",
      "node_modules/@types"
    ],
  },
  "files": [
    "src/server.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/typings/*.d.ts"
  ],
  "exclude": [
    "src/test/**/*.spec.ts",
    "node_modules"
  ]
}